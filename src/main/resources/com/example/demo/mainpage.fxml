<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.MainpageController">

   <!-- Sidebar for Contact List -->
   <VBox layoutX="10" layoutY="10" prefHeight="580" prefWidth="250" style="-fx-background-color: #F5F5F5; -fx-background-radius: 10;">
      <TextField promptText="Search" style="-fx-background-radius: 15; -fx-padding: 10;" />
      <ListView fx:id="contactListView" prefHeight="530" style="-fx-background-color: transparent;" />
   </VBox>

   <!-- Main Chat Area -->
   <VBox layoutX="270" layoutY="10" prefHeight="587.0" prefWidth="620">
      <!-- Chat Header -->
      <HBox spacing="10" style="-fx-background-color: #EFEFEF; -fx-padding: 10;">
         <Label fx:id="contactNameLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Chatting with [Contact Name]" />
         <Button style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Call" />
         <Button style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;" text="Video" />
      </HBox>

      <!-- Chat Messages Area -->
      <ScrollPane fx:id="chatScrollPane" fitToWidth="true" prefHeight="450" style="-fx-background-color: #FFFFFF;">
         <VBox fx:id="chatBox" spacing="10" style="-fx-padding: 10;" />
      </ScrollPane>

      <!-- Message Input Area -->
      <HBox alignment="center" prefHeight="95.0" prefWidth="620.0" spacing="10" style="-fx-padding: 10;">
         <TextArea fx:id="messageInput" prefHeight="9.0" prefWidth="500" wrapText="true" />
         <Button fx:id="sendButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Send" />
      </HBox>
   </VBox>
</AnchorPane>
