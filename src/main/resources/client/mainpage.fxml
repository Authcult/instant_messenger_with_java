<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.MainpageController">

   <!-- Sidebar for Contact List -->
   <VBox layoutX="10" layoutY="10" prefHeight="580" prefWidth="250" style="-fx-background-color: #F5F5F5; -fx-background-radius: 10;">
      <TextField promptText="Search" style="-fx-background-radius: 15; -fx-padding: 10;" />
      <ListView fx:id="contactListView" prefHeight="530" prefWidth="224.0" style="-fx-background-color: transparent;" />
   </VBox>

   <!-- Main Chat Area -->
   <VBox layoutX="270" layoutY="10" prefHeight="587.0" prefWidth="620">
      <!-- Chat Header -->
      <HBox prefHeight="44.0" prefWidth="488.0" spacing="10" style="-fx-background-color: #EFEFEF; -fx-padding: 10;">
         <Label fx:id="contactNameLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Chatting with [Contact Name]" />
         <Button style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Call" />
         <Button style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;" text="Video" />
      </HBox>

      <!-- Chat Messages Area -->
      <ScrollPane fx:id="chatScrollPane" fitToWidth="true" prefHeight="450" style="-fx-background-color: #FFFFFF;">
         <VBox fx:id="chatBox" spacing="10" style="-fx-padding: 10;" />
      </ScrollPane>

      <!-- Message Input Area -->
      <HBox alignment="center" prefHeight="95.0" prefWidth="620.0" spacing="10" style="-fx-padding: 10;">
         <TextArea fx:id="messageInput" prefHeight="9.0" prefWidth="500" wrapText="true" />
         <Button fx:id="sendButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Send" />
      </HBox>
   </VBox>
   <Button id="backButton" fx:id="backButton" layoutX="850.0" layoutY="22.0" mnemonicParsing="false" style="-fx-background-color: red; -fx-background-radius: 5;" text="退出" textFill="WHITE" />
   <Button layoutX="265.0" layoutY="517.0" mnemonicParsing="false" prefHeight="23.0" prefWidth="25.0" text="+" />
   <Button fx:id="clearButton" layoutX="257.0" layoutY="548.0" mnemonicParsing="false" prefHeight="23.0" prefWidth="45.0" text="clear" />
</AnchorPane>
